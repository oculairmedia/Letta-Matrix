# Matrix Homeserver Configuration
MATRIX_HOMESERVER_URL=https://matrix.oculair.ca
MATRIX_ADMIN_TOKEN=your_synapse_admin_token_here
MATRIX_SERVER_NAME=matrix.oculair.ca
MATRIX_ADMIN_USERNAME=@admin:matrix.oculair.ca
MATRIX_ADMIN_PASSWORD=your_admin_password_here

# MCP Server Configuration
MCP_SERVER_PORT=3100
MCP_SERVER_HOST=0.0.0.0

# Storage
DATA_DIR=./data

# Letta Integration (optional)
LETTA_API_URL=https://letta.oculair.ca
LETTA_API_TOKEN=your_letta_token_here

# Cross-Run Tracking Configuration
# Webhook server port for tool selector notifications
WEBHOOK_PORT=3101
# Maximum time to wait for conversation responses (seconds)
CONVERSATION_TIMEOUT_SECONDS=300
# Maximum time to poll for agent response after tool attachment (seconds)
MAX_RESPONSE_WAIT=60
# Interval between response polls (seconds)
RESPONSE_POLL_INTERVAL=2

# Logging
LOG_LEVEL=info
