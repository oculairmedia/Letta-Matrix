# Letta Agent MCP Server Dockerfile
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Create data directory for mappings and cache
RUN mkdir -p /app/data

# Copy application files
COPY letta_agent_mcp_server.py .

# Install Python dependencies
RUN pip install --no-cache-dir \
    aiohttp==3.9.1 \
    python-dotenv==1.0.0

# Create non-root user for security
RUN useradd -m -u 1000 mcpserver && chown -R mcpserver:mcpserver /app
USER mcpserver

# Expose HTTP port
EXPOSE 8017

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8017/health')" || exit 1

# Start the Letta Agent MCP server
CMD ["python", "letta_agent_mcp_server.py"]
