# OpenCode Matrix Bridge
# Forwards Matrix messages to registered OpenCode instances

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY opencode-bridge/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source and build
COPY opencode-bridge/tsconfig.json ./
COPY opencode-bridge/src ./src

# Install dev dependencies for build, then remove
RUN npm install && npm run build && npm prune --production

# Expose the bridge port
EXPOSE 3201

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3201/health || exit 1

# Run the bridge
CMD ["node", "dist/index.js"]
